# JusDNCE Core Environment Variables Example
# Copy this to .env.local and fill in your actual values

# Required: Gemini API for frame generation
GEMINI_API_KEY=your_gemini_api_key_here

# Required for Payment Features: Stripe Integration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Payment Plans (Create these in Stripe Dashboard)
STRIPE_PRICE_SINGLE=price_1234567890_single_export
STRIPE_PRICE_BASIC=price_1234567890_basic_plan  
STRIPE_PRICE_PRO=price_1234567890_pro_plan
STRIPE_PRICE_STUDIO=price_1234567890_studio_plan

# Optional: VIB34D Configuration
VIB34D_ENABLE_ADVANCED=true
VIB34D_DEFAULT_BPM=120

# Optional: Export Limits
MAX_FREE_EXPORT_DURATION=30
CHUNK_SIZE_SECONDS=30
MAX_VIDEO_QUALITY=4K